<!-- Main -->
<section id="main" class="w-60">
	<div id="" class="flex-column jc-between">
		{% if answer == "form" %}
			<form method="post" action="">
				<table class="m-b-05 w-100 bshadow fs-13">
					<tr>
						<th>id</th>
						<th>імя</th>
						<th>прізвище</th>
						<th>дата народження</th>
						<th>позиція</th>
					</tr>
					<tr>
						<th>{{ data.id }}</th>
						<th><input class="no-upper fs-12 no-upper" type="text" name="first_name" placeholder="імя" value="{{ data.first_name }}" required /></th>
						<th><input class="no-upper fs-12 no-upper" type="text" name="last_name" placeholder="прізвище" value="{{ data.last_name }}" required /></th>
						<th><input class="no-upper fs-12 no-upper" type="date" name="birth" placeholder="дата народження" value="{{ data.birth }}" required /></th>
						<th><input class="no-upper fs-12 no-upper" type="text" name="position" placeholder="позиція" value="{{ data.position }}" required /></th>
					</tr>
				</table>
				<input type="submit" value="Оновити дані гравця" class="link-black-white bshadow brr-4 fl-right p-04 fs-12 m-b-05 upper">
			</form>
		{% elseif answer == "save" %}
			<h3>дані гравця успішно оновлені в базі даних</h3>
		{% else %}
			<h3>вибачте, сталася помилка. спробуйте ще раз</h3>
		{% endif %}
		<a class="link-black-white bshadow brr-4 item-end p-04 fs-12 m-b-05" href="{{ btn_index_page }}"><i class="fa fa-list" aria-hidden="true"></i> Список команд</a>
	</div>
</section>